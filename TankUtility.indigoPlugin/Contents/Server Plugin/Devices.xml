<?xml version="1.0"?>
<Devices>
    <Device type="sensor" id="tankSensor">
        <Name>Tank Sensor</Name>
        <ConfigUI>
            <SupportURL>http://forums.indigodomo.com/viewforum.php?f=214</SupportURL>
			<Field id="SupportsOnState"       type="checkbox" defaultValue="false" hidden="true" />
			<Field id="SupportsSensorValue"   type="checkbox" defaultValue="true"  hidden="true" />
			<Field id="SupportsStatusRequest" type="checkbox" defaultValue="true"  hidden="true" />
			<Field id="SupportsBatteryLevel"  type="checkbox" defaultValue="true"  hidden="true" />
            <Field id="address" type="textfield"  readonly="true" />
        </ConfigUI>
        <States>
            <State id="temperature">
   				<ValueType>Number</ValueType>
				<TriggerLabel>Tank Temperature</TriggerLabel>
				<ControlPageLabel>Temperature</ControlPageLabel>
            </State>
            <State id="last_update">
   				<ValueType>String</ValueType>
				<TriggerLabel>Last Update</TriggerLabel>
				<ControlPageLabel>>Last Update</ControlPageLabel>
            </State>
            <State id="owner_name">
   				<ValueType>String</ValueType>
				<TriggerLabel>Owner Name</TriggerLabel>
				<ControlPageLabel>Owner Name</ControlPageLabel>
            </State>
            <State id="tank_address">
   				<ValueType>String</ValueType>
				<TriggerLabel>Tank Address</TriggerLabel>
				<ControlPageLabel>Address</ControlPageLabel>
            </State>
            <State id="capacity">
   				<ValueType>Number</ValueType>
				<TriggerLabel>Tank Capacity</TriggerLabel>
				<ControlPageLabel>Capacity</ControlPageLabel>
            </State>
            <State id="fuel_type">
   				<ValueType>String</ValueType>
				<TriggerLabel>Fuel Type</TriggerLabel>
				<ControlPageLabel>Fuel Type</ControlPageLabel>
            </State>
            <State id="previous_reading">
   				<ValueType>Number</ValueType>
				<TriggerLabel>Previous Reading</TriggerLabel>
				<ControlPageLabel>Previous</ControlPageLabel>
            </State>
            <State id="daily_usage">
   				<ValueType>Number</ValueType>
				<TriggerLabel>Daily Usage</TriggerLabel>
				<ControlPageLabel>Daily Usage</ControlPageLabel>
            </State>
            <State id="monthly_reading">
   				<ValueType>Number</ValueType>
				<TriggerLabel>Previous Monthly Reading</TriggerLabel>
				<ControlPageLabel>Previous Monthly</ControlPageLabel>
            </State>
            <State id="monthly_usage">
   				<ValueType>Number</ValueType>
				<TriggerLabel>Previous Month Usage</TriggerLabel>
				<ControlPageLabel>Previous Month Usage</ControlPageLabel>
            </State>
            <State id="current_month_usage">
   				<ValueType>Number</ValueType>
				<TriggerLabel>Current Month Usage</TriggerLabel>
				<ControlPageLabel>Current Month Usage</ControlPageLabel>
            </State>
        </States>
    </Device>
</Devices>
